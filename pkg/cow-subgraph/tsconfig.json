{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*", "**/*.spec.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "../../",
    "paths": {
      "@cowprotocol/subgraph/*": ["./pkg/cow-subgraph/src/*"],
      "@cowprotocol/common": ["./pkg/cow-common/src/index"],
      "@cowprotocol/common/*": ["./pkg/cow-common/src/*"],
      "@cowprotocol/config": ["./pkg/cow-config/src/index"],
      "@cowprotocol/config/*": ["./pkg/cow-config/src/*"]
    }
  },
  "references": [{ "path": "../cow-common" }, { "path": "../cow-config" }]
}
