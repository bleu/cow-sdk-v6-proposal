{
  "extends": "../config-typescript/base.json",
  "include": ["./src"],
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/contracts/*": ["../contracts/src/*"],
      "@cowprotocol/order-book/*": ["../cow-order-book/src/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "references": [
    { "path": "../cow-common" },
    { "path": "../cow-order-book" }
  ]
}
