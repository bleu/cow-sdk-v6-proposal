{
  "extends": "../../packages/typescript-config/base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "@cowprotocol/order-signing/*": ["./src/*"],
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/order-book": ["../cow-order-book/src"],
      "@cowprotocol/order-book/*": ["../cow-order-book/src/*"],
      "@cowprotocol/order-book/generated": ["../cow-order-book/src/generated"],
      "@cowprotocol/order-book/generated/*": ["../cow-order-book/src/generated/*"],
      "@cowprotocol/order-book/models": ["../cow-order-book/src/generated/models"],
      "@cowprotocol/order-book/models/*": ["../cow-order-book/src/generated/models/*"],
      "@cowprotocol/contracts": ["../cow-contracts/src"],
      "@cowprotocol/contracts/*": ["../cow-contracts/src/*"]
    }
  },
  "references": [
    { "path": "../cow-common" },
    { "path": "../cow-contracts" },
    { "path": "../cow-order-book" }
  ]
}
