{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*", "src/__generated__/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "../../",
    "paths": {
      "@cowprotocol/common": ["./pkg/cow-common/src"],
      "@cowprotocol/common/*": ["./pkg/cow-common/src/*"],
      "@cowprotocol/composable": ["./pkg/cow-composable/src"],
      "@cowprotocol/composable/*": ["./pkg/cow-composable/src/*"],
      "@cowprotocol/sdk-ethers-v5": ["./pkg/cow-sdk-ethers-v5/src"],
      "@cowprotocol/sdk-ethers-v5/*": ["./pkg/cow-sdk-ethers-v5/src/*"],
      "@cowprotocol/order-signing": ["./pkg/cow-order-signing/src"],
      "@cowprotocol/order-signing/*": ["./pkg/cow-order-signing/src/*"]
    }
  },
  "references": [{ "path": "../cow-common" }]
}
