{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@cowprotocol/trading/*": ["./src/*"],
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/config": ["../cow-config/src"],
      "@cowprotocol/config/*": ["../cow-config/src/*"],
      "@cowprotocol/sdk-ethers-v5": ["../cow-sdk-ethers-v5/src"],
      "@cowprotocol/sdk-ethers-v5/*": ["../cow-sdk-ethers-v5/src/*"],
      "@cowprotocol/order-book": ["../cow-order-book/src"],
      "@cowprotocol/order-book/*": ["../cow-order-book/src/*"],
      "@cowprotocol/order-signing": ["../cow-order-signing/src"],
      "@cowprotocol/order-signing/*": ["../cow-order-signing/src/*"]
    }
  },
  "references": [
    { "path": "../cow-common" },
    { "path": "../cow-composable" },
    { "path": "../cow-order-book" },
    { "path": "../cow-order-signing" },
    { "path": "../cow-sdk-ethers-v5" }
  ]
}
