{
  "extends": "../config-typescript/base.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/composable": ["../cow-composable/src"],
      "@cowprotocol/composable/*": ["../cow-composable/src/*"],
      "@cowprotocol/cow-config": ["../cow-config/src"],
      "@cowprotocol/cow-config/*": ["../cow-config/src/*"],
      "@cowprotocol/sdk-ethers-v5": ["../cow-sdk-ethers-v5/src"],
      "@cowprotocol/sdk-ethers-v5/*": ["../cow-sdk-ethers-v5/src/*"],
      "@cowprotocol/signing": ["../cow-signing/src"],
      "@cowprotocol/signing/*": ["../cow-signing/src/*"]
    }
  },
  "references": [
    { "path": "../cow-common" },
    { "path": "../cow-config" },
    { "path": "../cow-order-book" },
    { "path": "../cow-signing" },
    { "path": "../cow-sdk-ethers-v5" }
  ]
}
