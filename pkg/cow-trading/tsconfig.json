{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*", "**/*.spec.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@cowprotocol/trading/*": ["../../pkg/cow-trading/src/*"],
      "@cowprotocol/common": ["../../pkg/cow-common/src"],
      "@cowprotocol/common/*": ["../../pkg/cow-common/src/*"],
      "@cowprotocol/config": ["../../pkg/cow-config/src"],
      "@cowprotocol/config/*": ["../../pkg/cow-config/src/*"],
      "@cowprotocol/sdk-ethers-v5": ["../../pkg/cow-sdk-ethers-v5/src"],
      "@cowprotocol/sdk-ethers-v5/*": ["../../pkg/cow-sdk-ethers-v5/src/*"],
      "@cowprotocol/order-book": ["../../pkg/cow-order-book/src"],
      "@cowprotocol/order-book/*": ["../../pkg/cow-order-book/src/*"],
      "@cowprotocol/order-signing": ["../../pkg/cow-order-signing/src"],
      "@cowprotocol/order-signing/*": ["../../pkg/cow-order-signing/src/*"]
    }
  },
  "references": [
    { "path": "../cow-common" },
    { "path": "../cow-composable" },
    { "path": "../cow-order-book" },
    { "path": "../cow-order-signing" },
    { "path": "../cow-sdk-ethers-v5" }
  ]
}
