{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "../../",
    "paths": {
      "@cowprotocol/config": ["./pkg/cow-config/src"],
      "@cowprotocol/config/*": ["./pkg/cow-config/src/*"],
      "@cowprotocol/common": ["./pkg/cow-common/src"],
      "@cowprotocol/common/*": ["./pkg/cow-common/src/*"]
    }
  },
  "references": [{ "path": "../cow-common" }]
}
