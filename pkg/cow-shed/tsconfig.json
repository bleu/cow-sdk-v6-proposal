{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["jest", "node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "paths": {
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/composable": ["../cow-composable/src"],
      "@cowprotocol/composable/*": ["../cow-composable/src/*"],
      "@cowprotocol/signing": ["../cow-signing/src"],
      "@cowprotocol/signing/*": ["../cow-signing/src/*"],
      "@cowprotocol/sdk-abstract": ["../cow-sdk-abstract/src"],
      "@cowprotocol/sdk-abstract/*": ["../cow-sdk-abstract/src/*"],
      "@cowprotocol/abi": ["../cow-abi/src"],
      "@cowprotocol/abi/*": ["../cow-abi/src/*"],
      "@cowprotocol/sdk-ethers-v5": ["../cow-sdk-ethers-v5/src"],
      "@cowprotocol/sdk-ethers-v5/*": ["../cow-sdk-ethers-v5/src/*"]
    }
  },
  "references": [
    { "path": "../cow-common" },
    { "path": "../cow-signing" },
    { "path": "../cow-composable" },
    { "path": "../cow-sdk-abstract" },
    { "path": "../cow-abi" },
    { "path": "../cow-sdk-ethers-v5" }
  ]
}
