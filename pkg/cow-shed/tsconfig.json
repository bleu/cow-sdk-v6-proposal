{
  "extends": "../../packages/typescript-config/base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@cowprotocol/contracts": ["../cow-contracts/src"],
      "@cowprotocol/contracts/*": ["../cow-contracts/src/*"],
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/typescript-config" },
    { "path": "../cow-common" },
    { "path": "../cow-contracts" }
  ]
}
