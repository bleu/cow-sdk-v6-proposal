{
  "extends": "../../packages/typescript-config/base.json",
  "include": ["src/**/*", "src/chains/**/*", "src/types.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@cowprotocol/common": ["./src"],
      "@cowprotocol/common/*": ["./src/*"],
      "@cowprotocol/common/chains": ["./src/chains"],
      "@cowprotocol/common/consts": ["./src/consts"]
    }
  }
}
