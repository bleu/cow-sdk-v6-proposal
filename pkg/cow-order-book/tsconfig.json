{
  "extends": "../../packages/typescript-config/base.json",
  "include": ["src/**/*", "src/__generated__/**/*", "src/__generated__/models/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@cowprotocol/order-book/*": ["./src/*"],
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/config": ["../cow-config/src"],
      "@cowprotocol/config/*": ["../cow-config/src/*"]
    }
  },
  "references": [{ "path": "../cow-common" }, { "path": "../cow-config" }]
}
