{
  "extends": "../../packages/typescript-config/base.json",
  "include": [
    "src/**/*",
    "src/generated/**/*",
    "src/generated/models/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__/**"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@cowprotocol/order-book": ["./src"],
      "@cowprotocol/order-book/*": ["./src/*"],
      "@cowprotocol/order-book/generated": ["./src/generated"],
      "@cowprotocol/order-book/generated/*": ["./src/generated/*"],
      "@cowprotocol/order-book/models": ["./src/generated/models"],
      "@cowprotocol/order-book/models/*": ["./src/generated/models/*"],
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/common/consts": ["../cow-common/src/consts"],
      "@cowprotocol/config": ["../cow-config/src"],
      "@cowprotocol/config/*": ["../cow-config/src/*"]
    }
  },
  "references": [
    { "path": "../cow-common" },

    { "path": "../cow-config" }
  ]
}
