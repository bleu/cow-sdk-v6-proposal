{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@cowprotocol/order-book/*": ["./src/*"],
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/config": ["../cow-config/src"],
      "@cowprotocol/config/*": ["../cow-config/src/*"]
    }
  },
  "references": [{ "path": "../cow-common" }, { "path": "../cow-config" }]
}
