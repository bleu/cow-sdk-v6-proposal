{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["jest", "node"],
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "src/__generated__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__mocks__/**"
  ],
  "references": [
    { "path": "../cow-common/tsconfig.build.json" },
    { "path": "../cow-config/tsconfig.build.json" }
  ]
}
