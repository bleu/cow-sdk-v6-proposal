{
  "extends": "../../pkg/config-typescript/base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@cowprotocol/common": ["../cow-common/src"],
      "@cowprotocol/common/*": ["../cow-common/src/*"],
      "@cowprotocol/contracts": ["../cow-contracts/src"],
      "@cowprotocol/contracts/*": ["../cow-contracts/src/*"],
      "@cowprotocol/sdk-abstract": ["../cow-sdk-abstract/src"],
      "@cowprotocol/sdk-abstract/*": ["../cow-sdk-abstract/src/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "references": [{ "path": "../cow-common" }, { "path": "../cow-contracts" }, { "path": "../cow-sdk-abstract" }]
}
